<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@android:id/list"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <moralnorm.appcompat.widget.dialog.DialogButtonPanel
            style="?android:buttonBarStyle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureWithLargestChild="true"
            android:paddingStart="@dimen/appcompat_dialog_button_panel_margin_horizontal"
            android:paddingEnd="@dimen/appcompat_dialog_button_panel_margin_horizontal">

            <Button
                android:id="@android:id/button2"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1"
                style="?android:buttonBarNegativeButtonStyle" />

            <Button
                android:id="@android:id/button1"
                android:text="@android:string/ok"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1"
                style="?android:buttonBarPositiveButtonStyle" />

        </moralnorm.appcompat.widget.dialog.DialogButtonPanel>

    </LinearLayout>
</LinearLayout>