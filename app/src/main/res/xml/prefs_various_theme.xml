        <SwitchPreference
            android:title="禁用Miui版本检测"
            android:key="prefs_key_theme_manager_version_code_modify"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory>

        <SwitchPreference
            android:title="禁用广告"
            android:key="prefs_key_various_theme_diable_ads"
