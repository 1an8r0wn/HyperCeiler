        <SwitchPreference
            android:title="主题破解"
            android:key="prefs_key_various_theme_crack"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory>

        <SwitchPreference
            android:title="启用PAD主题"
            android:key="prefs_key_various_theme_enable_pad_theme"
