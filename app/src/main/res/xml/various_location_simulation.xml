<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="任务一">

        <EditTextPreference
            android:title="包名"
            android:key="prefs_key_location_simulation_package_name"/>

        <DropDownPreference
            android:key="prefs_key_location_simulation_location"
            android:title="位置"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="选择位置"
            android:key="prefs_key_location_simulation_location_custom" />

        <Preference android:title="网络" />
    </PreferenceCategory>

    <PreferenceCategory android:title="任务二">

        <EditTextPreference
            android:title="包名"
            android:key="prefs_key_location_simulation_package_name2"/>

        <DropDownPreference
            android:key="prefs_key_location_simulation_location2"
            android:title="位置"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="选择位置"
            android:key="prefs_key_location_simulation_location_custom2" />

        <Preference android:title="网络" />
    </PreferenceCategory>

    <PreferenceCategory android:title="任务三">

        <EditTextPreference
            android:title="包名"
            android:key="prefs_key_location_simulation_package_name3"/>

        <DropDownPreference
            android:key="prefs_key_location_simulation_location3"
            android:title="位置"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="选择位置"
            android:key="prefs_key_location_simulation_location_custom3" />

        <Preference android:title="网络" />
    </PreferenceCategory>

    <PreferenceCategory android:title="通用">

        <DropDownPreference
            android:title="运营商伪装修复"
            android:key="prefs_key_location_simulation_operator_fix"
            app:entries="@array/operator_fix"
            app:entryValues="@array/operator_fix_value"
            android:defaultValue="2" />

        <Preference android:title="GPS" />
        <EditTextPreference android:title="Mac" />
        <EditTextPreference android:title="WiFi" />
        <EditTextPreference android:title="路由器Mac" />
    </PreferenceCategory>
</PreferenceScreen>