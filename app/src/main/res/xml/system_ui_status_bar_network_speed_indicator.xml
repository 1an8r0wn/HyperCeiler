<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/system_ui_statusbar_network_speed_indicator_default_title">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_system_ui_statusbar_network_speed_separate"
            android:summary="@string/system_ui_statusbar_network_speed_separate_desc"
            android:title="@string/system_ui_statusbar_network_speed_separate" />

       <SwitchPreference
           android:defaultValue="false"
           android:key="prefs_key_system_ui_statusbar_network_speed_spacing"
           android:summary="@string/system_ui_statusbar_network_speed_spacing_desc"
           android:title="@string/system_ui_statusbar_network_speed_spacing" />

        <SeekBarPreference
            android:defaultValue="3"
            android:key="prefs_key_system_ui_statusbar_network_speed_update_spacing"
            android:title="@string/system_ui_statusbar_network_speed_update_spacing"
            app:format="%d s"
            app:maxValue="10"
            app:minValue="1"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_network_speed_indicator_expand_title">

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_system_ui_statusbar_network_speed_value"
            android:title="@string/system_ui_statusbar_network_speed_value" />

        <DropDownPreference
            android:dependency="prefs_key_system_ui_statusbar_network_speed_value"
            android:key="prefs_key_system_ui_statusbar_network_speed_size"
            android:title="@string/system_ui_statusbar_network_speed_size"
            android:defaultValue="2"
            app:entries="@array/system_ui_status_bar_network"
            app:entryValues="@array/system_ui_status_bar_network_value" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="prefs_key_system_ui_statusbar_network_speed_value"
            android:key="prefs_key_system_ui_statusbar_network_speed_hide"
            android:summary="@string/system_ui_statusbar_network_speed_hide_desc"
            android:title="@string/system_ui_statusbar_network_speed_hide" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="prefs_key_system_ui_statusbar_network_speed_value"
            android:key="prefs_key_system_ui_statusbar_network_speed_visibility"
            android:summary="@string/system_ui_statusbar_network_speed_visibility_desc"
            android:title="@string/system_ui_statusbar_network_speed_visibility" />

        <SeekBarPreference
            android:defaultValue="64"
            android:key="prefs_key_system_ui_statusbar_network_speed_hide_slow"
            android:dependency="prefs_key_system_ui_statusbar_network_speed_value"
            android:title="@string/system_ui_statusbar_network_speed_hide_slow"
            app:format="%d KB/s"
            app:maxValue="1024"
            app:minValue="16"
            app:showSeekBarValue="true" />

        <Preference
            android:summary="@string/system_ui_statusbar_network_speed_hide_slow_desc"
            android:dependency="prefs_key_system_ui_statusbar_network_speed_value"/>

    </PreferenceCategory>

</PreferenceScreen>